      <CollectionView.ItemsLayout>
        <GridItemsLayout
          HorizontalItemSpacing="0"
          Orientation="Vertical"
          Span="9"
          VerticalItemSpacing="0" />
      </CollectionView.ItemsLayout>
      <CollectionView.ItemTemplate>
