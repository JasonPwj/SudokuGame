              </Border.Behaviors>-->
            <Border
              Margin="{Binding CellMargin}"
              Padding="0"
              BackgroundColor="{Binding BackColor}">
              <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
              </Border.StrokeShape>
              <Label
